<tool id="orthocore" name="Evolutionary analysis" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="21.05">
    <description>launch the evolutionary analysis of gene sets</description>
    <macros>
	<token name="@TOOL_VERSION@">1.0</token>
	<token name="@VERSION_SUFFIX@">1</token>
    </macros>
    
    <requirements>
        <requirement type="package" version="@TOOL_VERSION@">orthocore</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
	    orthocore
	    #if str('$identityValueE'):
	    	-e '$identityValueE'
	    #end if
	    -i '$inputGenes'
	    #if str('$koDetails'):
	    	-ko '$koDetails'
	    #end if
	    '$launchDI'
	    '$launchGO'
	    '$launchSNP'
	    #if str('$orthologyType'):
	    	-o '$orthologyType'
	    #end if
	    #if str('$session'):
	    	-s '$session'
	    #end if
	    #if str('$SWValueE'):
	    	-sw '$SWValueE'
	    #end if
	    #if str('$taxDeep'):
	    	-taxDeepness '$taxDeep'
	    #end if
	    >> '$outfile'	    
    ]]></command>
    <inputs>
        <param name="inputGenes" argument="-i" type="data" format="txt" label="inputGenes"
	    help="Path to the file containing gene list." />
	<param name="koDetails" argument="-ko" type="select" optional="true" label="koDetails">
	    <option value="1" selected="true">All genes</option>
	    <option value="2">Only same label</option>
	</param>
	<param name="orthologyType" argument="-o" type="select" optional="true" label="orthologyType">
	    <option value="1" selected="true">KEGG Orthology groups</option>
	    <option value="0">Best Similarity Table</option>
	</param>
	<param name="identityValueE" argument="-e" type="float" min="0.0" max="1.0" optional="true" label="identityValueE"/>
	<param name="SWValueE" argument="-sw" type="integer" min="0" max="10000" optional="true" label="SWValueE"/>
	<param name='taxDeep' argument="-taxDeepness" type="integer" min="0" max="30" optional="true" label="taxDeepness"/>
	<param name="launchDI" argument="-ldi" type="boolean" truevalue="-ldi" falsevalue="" optional="true" label="launchDI"/>
	<param name="launchGO" argument="-lgo" type="boolean" truevalue="-lgo" falsevalue="" optional="true" label="launchGO"/>
	<param name="launchSNP" argument="-lsnp" type="boolean" truevalue="-lsnp" falsevalue="" optional="true" label="launchSNP"/>
	<param name="session" argument="-s" type="text" optional="true" label="session"/>
    </inputs>
    <outputs>
	<data name="outfile" format="txt"/>
    </outputs>
    <tests>
        <test expect_num_outputs="0">
	</test>
    </tests>

    <help><![CDATA[
        This tool launches the evolutionary analysis of gene sets.
    ]]></help>
</tool>
